<%= form_for([@movie_rev,@review]) do |f| %>
  <%= render 'shared/errors',object:@review %>
  <fieldset>
    <ol>

      <li class="required stars">
        <%= f.label :stars %>  
        <%= f.select :stars, Review::STARS, prompt: "Pick one" %>      
      </li>
      <li class="required">
        <%= f.label :comment %>
        <%= f.text_area :comment, cols: 40, rows: 7 %>
      </li>
    </ol>
    <p>
      <%= f.submit %>
      <%= link_to "Cancel", movies_path, class: 'button' %>
    </p>
  </fieldset>
<% end %>